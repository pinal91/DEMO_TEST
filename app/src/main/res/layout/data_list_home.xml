<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ProgressPicture="http://schemas.android.com/apk/res-auto"
        xmlns:camomile="http://schemas.android.com/apk/res-auto"
        android:id="@+id/relMain"
        android:padding="@dimen/five_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
            android:layout_toStartOf="@+id/imgNext"
            android:id="@+id/linMainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/five_dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:orientation="vertical">
        <TextView
                android:textStyle="bold"
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:text="Firm name"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/MediumTextSize"
                android:visibility="visible" />

        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <TextView
                android:layout_toStartOf="@+id/imgLawfirm"
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/five_dp"
                android:text="Firm name"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/TitleTextSize"
                android:visibility="visible" />
        <ImageView
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:id="@+id/imgLawfirm"
                android:layout_width="@dimen/hundred_fifty_dp"
                android:layout_height="@dimen/ninety_dp"
                android:scaleType="fitXY" />
        </RelativeLayout>

    </LinearLayout>
    <ImageView
            android:tint="@color/icon_color"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_next"
            android:id="@+id/imgNext"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:scaleType="fitXY" />
</RelativeLayout>